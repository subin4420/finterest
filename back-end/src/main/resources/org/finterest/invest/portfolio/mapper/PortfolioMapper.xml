<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.finterest.invest.portfolio.mapper.PortfolioMapper">

    <select id="selectTransactionHistory"
            parameterType="Integer"
            resultType="org.finterest.invest.portfolio.domain.PortfolioDTO">
        SELECT t.created_at, t.stock_name, t.trade_type, t.total_price, u.money
        FROM trade t
                 JOIN users u ON t.user_id = u.user_id
        WHERE t.user_id = #{VALUE}
        ORDER BY t.created_at DESC
    </select>
    <select id="getPreviousDayClosePrice"
            parameterType="java.lang.String"
            resultType="java.lang.String">
        SELECT clpr FROM kospi_stock_list
        WHERE srtnCd = #{VALUE}
    </select>
</mapper>